datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  hashedPassword String
  displayName    String
  createdAt      DateTime @default(now())

  sessions       Session[]
}

model Session {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model MatchCache {
  matchId   String   @id
  json      Json
  updatedAt DateTime @updatedAt
}

model TimelineCache {
  matchId   String   @id
  json      Json
  updatedAt DateTime @updatedAt
}
